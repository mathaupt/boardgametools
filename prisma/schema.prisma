// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SQL_DATABASE_URL")
}

// ============================================
// USER & AUTH
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String
  role          String    @default("USER")
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  ownedGames      Game[]
  createdSessions GameSession[]
  sessionPlayers  SessionPlayer[]
  ownedGroups     Group[]
  groupMembers    GroupMember[]
  createdEvents   Event[]
  eventInvites    EventInvite[]
  gameProposals   GameProposal[]
  votes           Vote[]
  dateVotes       DateVote[]
  passwordResetTokens PasswordResetToken[]
}

// ============================================
// GAMES
// ============================================

model Game {
  id              String    @id @default(cuid())
  name            String
  description     String?
  minPlayers      Int       @default(1)
  maxPlayers      Int       @default(4)
  playTimeMinutes Int?
  complexity      Int?      // 1-5 scale
  bggId           String?   // BoardGameGeek ID
  imageUrl        String?
  ownerId         String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  owner           User            @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  sessions        GameSession[]
  proposals       GameProposal[]
  selectedEvents  Event[]         @relation("SelectedGame")
}

// ============================================
// GAME SESSIONS
// ============================================

model GameSession {
  id              String    @id @default(cuid())
  gameId          String
  playedAt        DateTime  @default(now())
  durationMinutes Int?
  notes           String?
  createdById     String
  createdAt       DateTime  @default(now())

  // Relations
  game            Game            @relation(fields: [gameId], references: [id], onDelete: Cascade)
  createdBy       User            @relation(fields: [createdById], references: [id], onDelete: Cascade)
  players         SessionPlayer[]
}

model SessionPlayer {
  id          String    @id @default(cuid())
  sessionId   String
  userId      String
  score       Int?
  isWinner    Boolean   @default(false)
  placement   Int?

  // Relations
  session     GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([sessionId, userId])
}

// ============================================
// GROUPS
// ============================================

model Group {
  id          String    @id @default(cuid())
  name        String
  description String?
  ownerId     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  owner       User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  members     GroupMember[]
  events      Event[]
}

model GroupMember {
  id        String    @id @default(cuid())
  groupId   String
  userId    String
  role      String    @default("member") // owner, admin, member
  joinedAt  DateTime  @default(now())

  // Relations
  group     Group     @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
}

// ============================================
// EVENTS & VOTING
// ============================================

model Event {
  id              String    @id @default(cuid())
  title           String
  description     String?
  eventDate       DateTime
  location        String?
  status          String    @default("draft") // draft, voting, closed
  createdById     String
  groupId         String?
  selectedGameId  String?
  isPublic        Boolean   @default(false)
  shareToken      String?   @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  createdBy       User            @relation(fields: [createdById], references: [id], onDelete: Cascade)
  group           Group?          @relation(fields: [groupId], references: [id], onDelete: SetNull)
  selectedGame    Game?           @relation("SelectedGame", fields: [selectedGameId], references: [id], onDelete: SetNull)
  selectedDate    DateTime?
  invites         EventInvite[]
  proposals       GameProposal[]
  guestParticipants GuestParticipant[]
  dateProposals   DateProposal[]
}

model EventInvite {
  id          String    @id @default(cuid())
  eventId     String
  userId      String?
  email       String?
  status      String    @default("pending") // pending, accepted, declined
  invitedAt   DateTime  @default(now())
  respondedAt DateTime?

  // Relations
  event       Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user        User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@unique([eventId, email])
}

model GameProposal {
  id          String    @id @default(cuid())
  eventId     String
  gameId      String
  proposedById String
  createdAt   DateTime  @default(now())

  // Relations
  event       Event     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  game        Game      @relation(fields: [gameId], references: [id], onDelete: Cascade)
  proposedBy  User      @relation(fields: [proposedById], references: [id], onDelete: Cascade)
  votes       Vote[]
  guestVotes  GuestVote[]

  @@unique([eventId, gameId])
}

model Vote {
  id          String    @id @default(cuid())
  proposalId  String
  userId      String
  createdAt   DateTime  @default(now())

  // Relations
  proposal    GameProposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([proposalId, userId])
}

model GuestParticipant {
  id        String   @id @default(cuid())
  eventId   String
  nickname  String
  createdAt DateTime @default(now())

  event     Event       @relation(fields: [eventId], references: [id], onDelete: Cascade)
  votes     GuestVote[]
  dateVotes GuestDateVote[]

  @@unique([eventId, nickname])
}

model GuestVote {
  id          String   @id @default(cuid())
  guestId     String
  proposalId  String
  createdAt   DateTime @default(now())

  guest       GuestParticipant @relation(fields: [guestId], references: [id], onDelete: Cascade)
  proposal    GameProposal     @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  @@unique([guestId, proposalId])
}

// ============================================
// DATE POLLING
// ============================================

model DateProposal {
  id          String    @id @default(cuid())
  eventId     String
  date        DateTime  // the proposed date (date only, time 00:00)
  createdAt   DateTime  @default(now())

  event       Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
  votes       DateVote[]
  guestVotes  GuestDateVote[]

  @@unique([eventId, date])
}

model DateVote {
  id            String    @id @default(cuid())
  dateProposalId String
  userId        String
  availability  String    @default("yes") // yes, maybe, no
  createdAt     DateTime  @default(now())

  dateProposal  DateProposal @relation(fields: [dateProposalId], references: [id], onDelete: Cascade)
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([dateProposalId, userId])
}

model GuestDateVote {
  id            String    @id @default(cuid())
  dateProposalId String
  guestId       String
  availability  String    @default("yes") // yes, maybe, no
  createdAt     DateTime  @default(now())

  dateProposal  DateProposal     @relation(fields: [dateProposalId], references: [id], onDelete: Cascade)
  guest         GuestParticipant @relation(fields: [guestId], references: [id], onDelete: Cascade)

  @@unique([dateProposalId, guestId])
}

model PasswordResetToken {
  id         String   @id @default(cuid())
  userId     String
  tokenHash  String   @unique
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
